ruby '3.1.0'
source 'https://rubygems.org'

gem 'sinatra','2.1'
gem 'sinatra-contrib'  # For sinatra/reloader
gem 'activerecord'     # Implied by your models usage
gem 'sinatra-activerecord'  # For ActiveRecord with Sinatra
gem 'rake'             # Commonly used with ActiveRecord tasks
gem 'pg'     # Or postgres/mysql depending on your database
             # For JSON handling
gem 'bundler'          # Referenced in your require
gem 'webrick'          # Common server for Sinatra apps
gem 'bcrypt'
gem "rackup"
gem 'dotenv'
gem 'rest-client'
gem 'json'
gem 'httparty'
gem 'rspotify'
gem 'multipart-post'
gem 'mustermann','~>1.1.2'

group :development do
  gem 'sinatra-reloader', '~> 1.0'
end
